---
import logo from '../assets/logoEma.jpg'
import imagenEma from '../assets/ema-bejenaru.webp'
import imagenEmaJpg from '../assets/ema-bejenaru.jpg'
import maquillaje from '../assets/maquillaje.png'
import pestanias from '../assets/pestanias.webp'

import Section from './Section.astro'
import { imageConfig } from 'astro:assets'
---

<div class="">
	
	<main class="w-full">
		
		<section class="relative flex flex-col gap-10 items-start justify-start w-full  overflow-hidden">
			<header class="w-full">
				<div class="w-full h-[40px] bg-[#E7B2A4] flex items-center justify-between px-[5%]">
					<div>Contaactar con Emma</div>
					<div>
						<span>(*34)666666</span>
						<span>@miinstagram</span>
					</div>
				</div>			
				<div class="absolute flex items-center justify-between w-full px-[5%]">
					<img src={logo.src} alt="logo ema" class=" object-contain w-[100px] rounded-xl p-2" />
					<nav class="w-full">
						<ul class="flex items-center justify-around text-white text-lg font-bold">
							<li><a href="/">Inicio</a></li>
							<li><a href="/contacto">Contacto</a></li>
							<li><a href="/servicios">Servicios</a></li>
							<li><a href="/proyectos">Proyectos</a></li>
						</ul>
					</nav>
				</div>
			</header>
			<img src={imagenEma.src} alt="imagen ema" class="absolute top-0 left-0 w-full object-contain -z-10" />
			<div class="absolute top-0 left-0 w-full min-h-full bg-black -z-0 opacity-30 "></div>
			<div class="flex items-start justify-start w-full h-full z-10 px-[5%] mb-24">
				<div class="flex flex-col items-start justify-start gap-10 w-1/2 mt-[5%]">
					<div class="flex flex-col items-start justify-start gap-3 w-full  text-white">
						<span class="text-8xl font-semibold">Soy Ema</span>
						<span class="text-7xl font-semibold uppercase text-[#E7B2A4]">Bejenaru</span>
						<h1 class="text-5xl font-semibold">Ema Bejenaru</h1>
						<p class="text-4xl">Empresaria de la Belleza</p>
						<p class="text-4xl">Profesional aesthetics business</p>
						<p class="text-4xl text-[#E7B2A4]">Emprendedora y Mentora</p>
					</div>
					<div class="flex flex-col gap-4 items-start justify-start w-full">
						<div class="flex  gap-3 items-start justify-start">
							<button class="bg-gradient-to-r from-[#EFb810] to-[#EFb810] text-gray-800 font-bold py-2 px-8 rounded-full shadow-lg hover:from-yellow-500 hover:to-gray-100 transition duration-300">Sobre mi</button>
							<button class="py-2 px-8 border border-1 border-[#EFb810] rounded-full">Contáctanos</button>
						</div>
						<div class="flex items-start justify-start gap-2 text-slate-100">
							<div class="flex flex-col items-center justify-start gap-2">
								⭐
								<span class="">Estilo</span>
							</div>
							<div class="flex flex-col items-center justify-start gap-2">
								⭐
								<span class="">Negocios</span>
							</div>
							<div class="flex flex-col items-center justify-start gap-2">
								⭐
								<span class="">Mentoría</span>
							</div>
							<div class="flex flex-col items-center justify-start gap-2">
								⭐
								<span class="">Mentalidad</span>
							</div>
							<div class="flex flex-col items-center justify-start gap-2">
								⭐
								<span class="">Emprendimiento</span>
							</div>
							
						</div>
		
					</div>
				</div>
				<div class="flex flex-col items-start justify-start gap-4 mt-[5%] w-1/2 h-full text-black">
					<div class="mt-[40%] ml-[40%] w-1/2 ">
						<span class="text-6xl font-semibold text-[#E7B2A4] uppercase">Internacional</span>
						<hr class="border-1 border-[#E7B2A4] w-[100%]">
						<p class="text-white">Jurado internacional en concursos de pestañas</p>

					</div>
				</div>			
			</div>
		</section>
		<section class="relative flex flex-col gap-10 items-start justify-start w-full">
			<div class="flex flex-col items-start justify-start w-full h-full px-[5%]">
				<h2 class="text-5xl font-semibold uppercase -mt-8">Nuestros Servicios</h2>
				<img src={maquillaje.src} alt="maquillaje" class="absolute top-0 right-[5%] w-[250px] object-contain -mt-24" />
				<div class="flex items-start justify-around gap-4 w-full h-full mt-14 mb-14">	
					<div class="flex flex-col items-start justify-center gap-10 w-[20%]">
						<img src={pestanias.src} alt="pestanias" class="w-full object-contain rounded-xl" />
						<div class="text-center text-balance">
							<h3 class="text-5xl font-semibold">Sobre Ema</h3>
							<p>Datos sobre Ema</p>
						</div>
					</div>
					<div class="flex flex-col items-center justify-center gap-10 w-[20%]">
						<img src={pestanias.src} alt="pestanias" class="w-full object-contain rounded-xl" />
						<div class="text-center text-balance">
							<h3 class="text-5xl font-semibold">Cursos y Mentorías</h3>
							<p>Datos sobre Ema</p>
						</div>
					</div>
					<div class="flex flex-col items-center justify-center gap-10 w-[20%]">
						<img src={pestanias.src} alt="pestanias" class="w-full object-contain rounded-xl" />
						<div class="text-center text-balance">
							<h3 class="text-5xl font-semibold">Nuestros Productos</h3>
							<p>Datos sobre Ema</p>
						</div>
					</div>
					<div class="flex flex-col items-center justify-center gap-10 w-[20%]">
						<img src={pestanias.src} alt="pestanias" class="w-full object-contain rounded-xl" />
						<div class="text-center text-balance">
							<h3 class="text-5xl font-semibold">Youtube</h3>
							<p>Datos sobre Ema</p>
						</div>
					</div>

				</div>
			</div>
		</section>
		<Section>
			<div class="flex items-start justify-start w-full px-[5%] py-[10%]">
				<div class="flex flex-col justify-start items-center w-1/2">
					<!-- <img src={imageConfig.src} alt="imagen Ema Bejenaru" /> -->
					<img src={imagenEmaJpg.src} alt="imagen Ema Bejenaru" class="w-[80%] object-contain rounded-xl" />
				</div>
				<div class="flex flex-col justify-start items-start gap-8 w-1/2">
					<h2 class="text-5xl font-semibold uppercase">
						Hola soy Ema Bejenaru
					</h2>
					<p class="object-contain">
						Ema Bejenaru es una reconocida especialista en estética de la mirada con más de 12 años de experiencia en el sector de la belleza. Es fundadora del Salón Ema Bejenaru, ubicado en Travessera de les Corts, 190, Barcelona, donde se ofrecen servicios especializados en extensiones de pestañas, cejas y depilación facial con hilo.
						
					</p>
					<p>
						Además de dirigir su salón, Ema es formadora y mentora en su academia, Ema Bejenaru Academy, donde imparte cursos de extensiones de pestañas, lifting y tratamientos de cejas. Su academia también comercializa productos profesionales para estos tratamientos. 

					</p>
					<p>

						Ema combina sus pasiones como entrenadora especialista en la mirada, terapeuta y mentora, ofreciendo entrenamientos a otros profesionales del sector y participando en eventos y conferencias relacionados con la belleza y el emprendimiento. 
					</p>
					<p>

						Su salón ha recibido valoraciones muy positivas por parte de los clientes, destacando la profesionalidad y calidad de los servicios ofrecidos. 
					</p>
					<p>
						Para más información sobre sus servicios y formaciones, puedes visitar su página web oficial.

					</p>

					<a>
						Contacta con Ema
					</a>
				</div>

			</div>
		</Section>
		<Section>
			<div class="flex flex-col items-start justify-start w-full px-[5%]">
				<span>
					hace despegar tu negocio con estos:
				</span>
				<h2 class="text-5xl font-semibold uppercase">
					cursos y mentorías
				</h2>
				<div class="flex items-start justify-around gap-4 w-full h-full mt-14 mb-14">	
					<div class="flex flex-col items-start justify-center gap-10 w-[25%]">
						<img src={pestanias.src} alt="pestanias" class="w-full object-contain rounded-xl" />
						<div class="text-center text-balance">
							<h3 class="text-5xl font-semibold">Metamorfosis</h3>
							<p>Datos sobre Ema</p>
						</div>
					</div>
					<div class="flex flex-col items-center justify-center gap-10 w-[25%]">
						<img src={pestanias.src} alt="pestanias" class="w-full object-contain rounded-xl" />
						<div class="text-center text-balance">
							<h3 class="text-5xl font-semibold">Negocios de Éxito</h3>
							<p>Datos sobre Ema</p>
						</div>
					</div>
					<div class="flex flex-col items-center justify-center gap-10 w-[25%]">
						<img src={pestanias.src} alt="pestanias" class="w-full object-contain rounded-xl" />
						<div class="text-center text-balance">
							<h3 class="text-5xl font-semibold">Especializados en la mirada</h3>
							<p>Datos sobre Ema</p>
						</div>
					</div>
					

				</div>
			</div>
		</Section>
		<Section>
			<div class="flex flex-col items-start justify-start w-full px-[5%] bg-slate-100">
				<h2>
					Productos para la mejora de la mirada
				</h2>
			</div>
		</Section>
		<Section>
			<div class="flex flex-col items-start justify-start w-full px-[5%]">
				<h2>
					Tambien estoy en youtube
				</h2>
			</div>
		</Section>
		<Section>
			<div class="flex flex-col items-start justify-start w-full px-[5%] bg-slate-100">
				<h2>
					Contactame para más información
				</h2>
			</div>
		</Section>
		  
	</main>
	<footer>
		footer
	</footer>
</div>

